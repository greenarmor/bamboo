APP_NAME="Bamboo"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://127.0.0.1:9501
APP_KEY=

LOG_FILE=var/log/app.log

# OpenSwoole HTTP server
HTTP_HOST=127.0.0.1
HTTP_PORT=9501
HTTP_WORKERS=auto
TASK_WORKERS=1
MAX_REQUESTS=10000
STATIC_ENABLED=true

# Redis
REDIS_URL=tcp://127.0.0.1:6379
REDIS_QUEUE=jobs

# Database (optional Eloquent)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=app
DB_USERNAME=root
DB_PASSWORD=

# WebSocket
WS_HOST=127.0.0.1
WS_PORT=9502

# JWT authentication
AUTH_JWT_SECRET=
AUTH_JWT_TTL=3600
AUTH_JWT_ISSUER=Bamboo
AUTH_JWT_AUDIENCE=BambooUsers
AUTH_JWT_USER_STORE=var/auth/users.json
AUTH_JWT_ALLOW_REGISTRATION=true
