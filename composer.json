{
  "name": "greenarmor/bamboo",
  "description": "Bamboo \u2014 a fast PHP framework on OpenSwoole with a distinctive CLI and unique footprint.",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "php",
    "framework",
    "openswoole",
    "swoole",
    "http-server",
    "websocket",
    "queue",
    "bamboo"
  ],
  "homepage": "https://github.com/greenarmor/bamboo",
  "support": {
    "issues": "https://github.com/greenarmor/bamboo/issues",
    "source": "https://github.com/greenarmor/bamboo"
  },
  "require": {
    "php": "^8.4",
    "ext-openswoole": "*",
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1.3",
    "psr/container": "^2.0",
    "psr/log": "^3.0",
    "monolog/monolog": "^3.6",
    "nyholm/psr7": "^1.8",
    "http-interop/http-factory-guzzle": "^1.2",
    "predis/predis": "^2.2",
    "illuminate/database": "^11.0",
    "guzzlehttp/guzzle": "^7.9",
    "php-http/guzzle7-adapter": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Bamboo\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/bamboo"
  ],
  "scripts": {
    "post-install-cmd": [
      "php bin/bamboo app.key.make --if-missing"
    ],
    "post-update-cmd": [
      "php bin/bamboo cache.purge"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}