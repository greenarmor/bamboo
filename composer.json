{
  "name": "greenarmor/bamboo",
  "description": "BAMBOO (Bootstrapable Application Microframework Built for OpenSwoole Operations).",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "php",
    "framework",
    "openswoole",
    "swoole",
    "http-server",
    "websocket",
    "queue",
    "bamboo"
  ],
  "homepage": "https://github.com/greenarmor/bamboo",
  "support": {
    "issues": "https://github.com/greenarmor/bamboo/issues",
    "source": "https://github.com/greenarmor/bamboo"
  },
  "require": {
    "php": "^8.4",
    "ext-openswoole": "*",
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1.3",
    "psr/container": "^2.0",
    "psr/log": "^3.0",
    "monolog/monolog": "^3.6",
    "nyholm/psr7": "^1.8",
    "http-interop/http-factory-guzzle": "^1.2",
    "predis/predis": "^2.2",
    "illuminate/database": "^11.0",
    "guzzlehttp/guzzle": "^7.9",
    "php-http/guzzle7-adapter": "^1.0",
    "symfony/finder": "^7.1",
    "symfony/process": "^7.1",
    "promphp/prometheus_client_php": "^2.7"
  },
  "autoload": {
    "psr-4": {
      "Bamboo\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.68",
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^11.2"
  },
  "bin": [
    "bin/bamboo"
  ],
  "scripts": {
    "lint": "php-cs-fixer fix --config=.php-cs-fixer.php --diff --dry-run",
    "stan": "phpstan analyse --memory-limit=512M",
    "test": "phpunit",
    "validate:config": "php bin/bamboo config.validate",
    "post-install-cmd": [
      "php bin/bamboo app.key.make --if-missing"
    ],
    "post-update-cmd": [
      "php bin/bamboo cache.purge"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
